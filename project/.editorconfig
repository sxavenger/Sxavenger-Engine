# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = crlf
insert_final_newline = true

[*.{cpp,h,hlsl,hlsli}]
indent_style = tab
indent_size = 4
charset = utf-8
trim_trailing_whitespace = true