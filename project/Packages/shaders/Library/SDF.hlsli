namespace SDF {

	////////////////////////////////////////////////////////////////////////////////////////////
	// methods
	////////////////////////////////////////////////////////////////////////////////////////////

	float Sphere(float3 v, float radius) {
		return length(v) - radius;
	}

	float Box(float3 v, float3 size) {
		float3 q = abs(v) - size;
		return length(max(q, 0.0f)) + min(max(q.x, max(q.y, q.z)), 0.0f);
	}
	
};
