////////////////////////////////////////////////////////////////////////////////////////////
// DirectionalLightComponent structure
////////////////////////////////////////////////////////////////////////////////////////////
struct DirectionalLightComponent {

	//=========================================================================================
	// public variables
	//=========================================================================================

	InlineShadow shadow;

	float3 color;
	float intensity; //!< [lux]

	//=========================================================================================
	// public methods
	//=========================================================================================

	float3 GetColor() {
		return color * intensity * kPi;
	}
	
};
