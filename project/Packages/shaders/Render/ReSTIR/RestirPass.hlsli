//* shaders
#define _NUM_THREAD_X 16
#define _NUM_THREAD_Y 16
#define _NUM_THREAD_Z 1

//=========================================================================================
// buffer
//=========================================================================================

cbuffer Dimension : register(b0, space1) {
	uint2 dimension;
}

cbuffer Seed : register(b1, space1) {
	uint3 seed;
}

////////////////////////////////////////////////////////////////////////////////////////////
// common methods
////////////////////////////////////////////////////////////////////////////////////////////

//! @brief 2d Pixel To 1d Index
uint Flatten(uint2 pixel) {
	return pixel.y * dimension.x + pixel.x;
}
